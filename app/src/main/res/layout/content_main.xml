<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.MainActivity"
    tools:showIn="@layout/activity_main">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_sample_one_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sample_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sample_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_oen_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_sample_one_message" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_intent_sample"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="EditText example"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_sample_one" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_intent_example"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/intent_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_intent_sample" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_recycler_radio_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/radio_button_recycler_example"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_intent_example" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_photo_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/photo_recycler_example"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_recycler_radio_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_photo_search_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/photo_search_recycler_example"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_photo_recycler_view" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_holo_date_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_photo_search_view"
        android:text="@string/date_picker_holo_theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_photo_search_view" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_material_date_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_holo_date_picker"
        android:text="@string/date_picker_material_theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_holo_date_picker" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_date_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_material_date_picker"
        android:text="@string/date_picker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_material_date_picker" />
</androidx.constraintlayout.widget.ConstraintLayout>
